{
  "name": "poc-websocket-electron",
  "version": "1.0.0",
  "description": "Django WebSocket POC - Electron + Svelte Frontend",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "keywords": ["electron", "svelte", "django", "websocket"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "svelte": "^4.2.8",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "dependencies": {},
  "build": {
    "appId": "com.poc.websocket",
    "productName": "POC WebSocket",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
